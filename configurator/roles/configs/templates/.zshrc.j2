#Set some vars
export EDITOR="code"
export PATH="/usr/local/opt/python/libexec/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/go/bin"
export WORKON_HOME=~/Envs

GPG_TTY=$(tty)
export GPG_TTY
export SSH_AUTH_SOCK=/$HOME/.gnupg/S.gpg-agent.ssh

# Source Antigen
source ~/antigen.zsh

# Tell Antigen to use oh-my-zsh
antigen use oh-my-zsh

# Install plugins
antigen bundles <<EOBUNDLES
    autojump
    common-aliases
    command-not-found
    compleat
    docker
    git
    git-extras
    mvn
    osx
    pip
    python
    ruby
    vagrant
    virtualenvwrapper
    zsh-users/zsh-syntax-highlighting
    zsh-users/zsh-history-substring-search ./zsh-history-substring-search.zsh
EOBUNDLES

# Set aliases
alias aws="noglob aws"
alias o="code"
alias c="clear"

# Load a theme
antigen theme tonyseek/oh-my-zsh-seeker-theme seeker

# Done
antigen apply
function gi() { curl -L -s https://www.gitignore.io/api/$@ ;}

# The next line updates PATH for the Google Cloud SDK.
if [ -f /home/{{ user }}/google-cloud-sdk/path.zsh.inc ]; then
  source '/home/{{ user }}/google-cloud-sdk/path.zsh.inc'
fi